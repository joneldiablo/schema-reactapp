{
  "site": "MangiBone",
  "description": "Come rico, come saludable ¡come bien!",
  "icon": "icon.ico",
  "logo": "images/mangibone.svg",
  "domain": "mangibone.com",
  "api": "api/",
  "theme": "$themes.easy-commerce",
  "assets": {
    "images": "assets/images",
    "icons": "assets/icons",
    "videos": "assets/videos",
    "audios": "assets/audios",
    "fonts": "assets/fonts",
    "files": "assets/files"
  },
  "sections": {
    "header": {
      "type": "navbar",
      "label": "Header",
      "description": "Header of site, always at top.",
      "icon": "navbar",
      "attributes": {
        "site": "$site",
        "logo": "$logo",
        "logoHeight": 80,
        "description": "$description",
        "sticky": true,
        "menu": "$menus.main"
      }
    },
    "container": {
      "type": "container",
      "label": "Container",
      "description": "Wrap content of page.",
      "icon": "content"
    },
    "footer": {
      "type": "footer",
      "label": "Footer",
      "description": "Footer of site, always at bottom.",
      "icon": "footer",
      "attributes": {
        "fixed": true,
        "menu": "$menus.footer"
      }
    },
    "hero": {
      "label": "Hero",
      "type": "hero",
      "description": "First impresive image or banner container, wellcome to the site."
    },
    "signin-form": {
      "type": "form",
      "label": "Sign In",
      "attributes": {
        "endpoint": "",
        "fields": {
          "user": {},
          "password": {},
          "remember-me": {}
        }
      }
    },
    "signup-form": {
      "type": "form",
      "label": "Sign Up",
      "attributes": {
        "endpoint": "",
        "fields": {
          "user": {},
          "password": {}
        }
      }
    }
  },
  "menus": {
    "main": [
      {
        "label": "Inicio",
        "path": "/",
        "exact": true
      },
      "$pages.about",
      "$pages.catalog",
      "$pages.contact"
    ],
    "footer": [
      "$pages.home",
      "$pages.about",
      "$pages.contact",
      "$pages.blog",
      "$pages.privacy-terms"
    ],
    "social-networks": [
      {
        "label": "Facebook",
        "path": "https://facebook.com",
        "icon": "./assets/icons/facebook.svg"
      },
      {
        "label": "Twitter",
        "path": "https://twitter.com",
        "icon": "./assets/icons/twitter.svg"
      },
      {
        "label": "YouTube",
        "path": "https://youtube.com",
        "icon": "./assets/icons/youtube.svg"
      }
    ]
  },
  "templates": {
    "public": {
      "label": "Public",
      "description": "template for all public website",
      "icon": "template",
      "image": "images/template.jpg",
      "content": [
        {
          "ref": "$sections.header",
          "attributes": {
            "theme": "dark"
          }
        },
        {
          "ref": "$sections.container",
          "allowChildren": true
        },
        "$sections.footer"
      ]
    },
    "access": [
      {
        "ref": "$sections.container",
        "allowChildren": true,
        "attributes": {
          "type": "card"
        }
      }
    ],
    "document": [
      {
        "ref": "$sections.modal",
        "allowChildren": true,
        "attributes": {
          "type": "document"
        }
      }
    ],
    "store": [
      "$sections.catalog-filters",
      {
        "ref": "$sections.content",
        "allowChildren": true
      }
    ]
  },
  "pages": {
    "home": {
      "label": "Inicio",
      "path": "/",
      "icon": "home",
      "image": "images/home.jpg",
      "description": "lorem ipsum dollo",
      "content": [
        "$sections.hero",
        {
          "ref": "$sections.service",
          "attributes": {
            "service": "sections/wellcome"
          }
        },
        {
          "ref": "$sections.slider",
          "attributes": {
            "type": "cards-vertical",
            "show": 2,
            "service": "products/categories",
            "filters": {
              "limit": 5,
              "featured": true
            }
          }
        },
        {
          "ref": "$sections.slider",
          "attributes": {
            "service": "products",
            "filters": {
              "limit": 3,
              "featured": true
            }
          }
        }
      ]
    },
    "about": {
      "label": "Quiénes Somos",
      "path": "/about",
      "icon": "about",
      "image": "images/about.jpg",
      "description": "lorem ipsum dollo",
      "content": []
    },
    "catalog": {
      "label": "Catálogo",
      "path": "/catalog",
      "icon": "catalog",
      "image": "images/catalog.jpg",
      "description": "lorem ipsum dollo",
      "content": [
        "$sections.catalog-list"
      ]
    },
    "item": {
      "label": ":name",
      "path": "/:path",
      "icon": "item",
      "image": ":image",
      "description": ":description",
      "content": []
    },
    "cart": [],
    "checkout": [],
    "purchase-done": [],
    "purchase-error": [],
    "error": [],
    "not-found": [],
    "contact": {
      "label": "Contacto",
      "path": "/contact",
      "icon": "contact",
      "image": "images/contact.jpg",
      "description": "lorem ipsum dollo",
      "content": []
    },
    "signin": [],
    "signup": [],
    "password": [],
    "terms": [],
    "privacy": [],
    "survey": []
  },
  "routes": [
    {
      "template": "$templates.access",
      "children": [
        {
          "path": "/signin",
          "content": "$pages.signin",
          "children": [
            {
              "path": "/reset-password",
              "content": "$pages.password"
            }
          ]
        },
        {
          "path": "/signup",
          "content": "$pages.signup"
        }
      ]
    },
    {
      "template": "$templates.document",
      "children": [
        {
          "path": [
            "*/privacy",
            "/privacy"
          ],
          "content": "$pages.privacy"
        },
        {
          "path": [
            "*/terms",
            "/terms"
          ],
          "content": "$pages.terms"
        }
      ]
    },
    {
      "template": "$templates.public",
      "children": [
        {
          "//ATENTION": "the default path must be in last object if not, desapear other paths!!!",
          "path": "/",
          "exact": true,
          "content": "$pages.home"
        },
        {
          "path": "/about",
          "content": "$pages.about"
        },
        {
          "template": "$templates.store",
          "children": [
            {
              "path": "/catalog",
              "content": "$pages.catalog",
              "children": [
                {
                  "path": ":path",
                  "content": "$pages.item"
                }
              ]
            },
            {
              "path": "cart",
              "content": "$pages.cart",
              "children": [
                {
                  "path": "shipping",
                  "content": "$pages.shipping"
                },
                {
                  "path": "checkout",
                  "exact": true,
                  "content": "$pages.checkout"
                },
                {
                  "path": "checkout/done",
                  "content": "$pages.checkout-done"
                },
                {
                  "path": "checkout/error",
                  "content": "$pages.checkout-error"
                }
              ]
            }
          ]
        },
        {
          "path": "/contact",
          "content": "$pages.contact"
        },
        {
          "path": "survey",
          "content": "$pages.survey"
        },
        {
          "path": "*",
          "content": "$pages.not-found"
        }
      ]
    }
  ],
  "themes": {
    "easy-commerce": {
      "base": "default",
      "label": "Easy Commerce bs theme",
      "style": "",
      "variables": {},
      "fonts": []
    }
  }
}