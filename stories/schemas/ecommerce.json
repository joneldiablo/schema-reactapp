{
  "site": "Easy Commerce",
  "decription": "eCommerce easy and fast!!!!",
  "icon": "icon.ico",
  "logo": "logo.png",
  "domain": "eltianguisonline.com",
  "api": "api/",
  "theme": "$themes.easy-commerce",
  "assets": {
    "images": "assets/images",
    "icons": "assets/icons",
    "videos": "assets/videos",
    "audios": "assets/audios",
    "fonts": "assets/fonts",
    "files": "assets/files"
  },
  "sections": {
    "header": {
      "type": "header",
      "name": "Header",
      "description": "Header of site, always at top.",
      "icon": "header",
      "attributes": {
        "site": "$site",
        "logo": "$logo",
        "description": "$description",
        "fixed": true,
        "menu": "$menus.main"
      }
    },
    "content": {
      "type": "container",
      "name": "Content",
      "description": "Wrap content of page.",
      "icon": "content"
    },
    "footer": {
      "type": "footer",
      "name": "Footer",
      "description": "Footer of site, always at bottom.",
      "icon": "footer",
      "attributes": {
        "fixed": true,
        "menu": "$menus.footer"
      }
    },
    "hero": {
      "name": "Hero",
      "type": "hero",
      "description": "First impresive image or banner container, wellcome to the site."
    },
    "signin-form": {
      "type": "form",
      "name": "Sign In",
      "attributes": {
        "endpoint": "",
        "fields": {
          "user": {},
          "password": {},
          "remember-me": {}
        }
      }
    },
    "signup-form": {
      "type": "form",
      "name": "Sign Up",
      "attributes": {
        "endpoint": "",
        "fields": {
          "user": {},
          "password": {}
        }
      }
    }
  },
  "menus": {
    "main": [
      "$routes.home",
      "$routes.about",
      "$routes.contact"
    ],
    "footer": [
      "$routes.home",
      "$routes.about",
      "$routes.contact",
      "$routes.blog",
      "$routes.privacy-terms"
    ],
    "social-networks": [
      {
        "label": "Facebook",
        "value": "https://facebook.com",
        "icon": "./assets/icons/facebook.svg"
      },
      {
        "label": "Twitter",
        "value": "https://twitter.com",
        "icon": "./assets/icons/twitter.svg"
      },
      {
        "label": "YouTube",
        "value": "https://youtube.com",
        "icon": "./assets/icons/youtube.svg"
      }
    ]
  },
  "templates": {
    "public": [
      "$sections.header",
      "$sections.content",
      "$sections.footer"
    ],
    "access": [
      {
        "sections": "$sections.content",
        "attributes": {
          "type": "card"
        }
      }
    ],
    "document": [
      {
        "sections": "$sections.modal",
        "attributes": {
          "type": "document"
        }
      }
    ]
  },
  "pages": {
    "home": [
      "$sections.hero",
      {
        "section": "$sections.service",
        "attributes": {
          "service": "sections/wellcome"
        }
      },
      {
        "section": "$sections.slider",
        "attributes": {
          "type": "cards-vertical",
          "show": 2,
          "service": "products/categories",
          "filters": {
            "limit": 5,
            "featured": true
          }
        }
      },
      {
        "section": "$sections.slider",
        "attributes": {
          "service": "products",
          "filters": {
            "limit": 3,
            "featured": true
          }
        }
      }
    ],
    "about": [],
    "catalog": [],
    "item": [],
    "cart": [],
    "checkout": [],
    "purchase-done": [],
    "purchase-error": [],
    "error": [],
    "not-found": [],
    "contact": [],
    "signin": [],
    "signup": [],
    "password": [],
    "terms": [],
    "privacy": [],
    "survey": []
  },
  "routes": [
    {
      "template": "$templates.access",
      "children": [
        {
          "path": "/signin",
          "content": "$pages.signin",
          "children": [
            {
              "path": "/reset-password",
              "content": "$pages.password"
            }
          ]
        },
        {
          "path": "/signup",
          "content": "$pages.signup"
        }
      ]
    },
    {
      "template": "$templates.document",
      "children": [
        {
          "path": [
            "*/privacy",
            "/privacy"
          ],
          "content": "$pages.privacy"
        },
        {
          "path": [
            "*/terms",
            "/terms"
          ],
          "content": "$pages.terms"
        }
      ]
    },
    {
      "template": "$templates.public",
      "children": [
        {
          "//ATENTION": "the default path must be in last object if not, desapear other paths!!!",
          "path": "/",
          "exact": true,
          "content": "$pages.home"
        },
        {
          "path": "/about",
          "content": "$pages.about"
        },
        {
          "template": "$templates.store",
          "children": [
            {
              "path": "/catalog",
              "content": "$pages.catalog",
              "children": [
                {
                  "path": ":path",
                  "content": "$pages.item"
                }
              ]
            },
            {
              "path": "cart",
              "content": "$pages.cart",
              "children": [
                {
                  "path": "shipping",
                  "content": "$pages.shipping"
                },
                {
                  "path": "checkout",
                  "exact": true,
                  "content": "$pages.checkout"
                },
                {
                  "path": "checkout/done",
                  "content": "$pages.checkout-done"
                },
                {
                  "path": "checkout/error",
                  "content": "$pages.checkout-error"
                }
              ]
            }
          ]
        },
        {
          "path": "/contact",
          "content": "$pages.contact"
        },
        {
          "path": "survey",
          "content": "$pages.survey"
        },
        {
          "path": "*",
          "content": "$pages.not-found"
        }
      ]
    }
  ],
  "themes": {
    "easy-commerce": {
      "base": "default",
      "name": "Easy Commerce bs theme",
      "style": "",
      "variables": {},
      "fonts": []
    }
  }
}